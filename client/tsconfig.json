{
    "compilerOptions": {
      "target": "esnext",
      "module": "esnext",
      "moduleResolution": "node",
      "strict": true,
      "jsx": "react-jsx", 
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist", 
      "rootDir": "./src", 
      "resolveJsonModule": true,
      "isolatedModules": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }